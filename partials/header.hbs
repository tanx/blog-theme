<header class="sidebar-header">

    <div class="first">
        <div class="header-content">
            <a class="blog-title" href="{{@blog.url}}" title="{{@blog.title}}">
                {{@blog.title}}
                <span class="byline">{{@blog.description}}</span>
            </a>
            <div class="social-icons">
                {{#post}}
                <a href="http://twitter.com/intent/tweet?text={{title}}&url={{@blog.url}}{{url}}&via=tankredhase" title="Share on Twitter" target="_blank">&#x6b;</a>
                <a href="http://www.facebook.com/share.php?u={{@blog.url}}{{url}}&t={{title}}" title="Share on Facebook" target="_blank">&#x6a;</a>
                <a href="https://plus.google.com/share?url={{@blog.url}}{{url}}" title="Share on Google+" target="_blank">&#x6c;</a>
                {{/post}}
                <a href="{{@blog.url}}/rss/" title="RSS feed">&#x76;</a>
            </div>
        </div>
    </div>

    <div class="second">
        <a class="expander" title="Show menu">
        	<div class="expand"><span class="icon"></span>Menu</div>
        	<div class="collapse"><span class="icon collapse"></span>Collapse</div>
        </a>
		<!--div class="cover-wrapper">
			<img class="cover" src="{{@blog.cover}}" alt="" title="" />
		</div-->
        <ul class="main-menu">
            <li class="menu-item">
                <a href="{{@blog.url}}">Home</a>
            </li>
            <li class="menu-item">
                <a href="{{@blog.url}}/about/">About me</a>
            </li>
        </ul>
    </div>

</header>